@model orion.web.Employees.CreateEmployeeViewModel

@{
    ViewData["Title"] = "NewEmployee";
}

<nav id="bread-crumb-bar" class="red darken-3">
    <div class="nav-wrapper ">
        <div class="col s12">
            <a href="#!" class="breadcrumb">Home</a>
            <a href="#!" class="breadcrumb">Employee List</a>
            <a href="#!" class="breadcrumb">Add New Employee</a>
        </div>
    </div>
</nav>

<div class="container">
    <form asp-action="NewEmployee" autocomplete="off">
        <div class="row">
            <div class="col s12">
                <h4>Add New Employee</h4>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
        </div>

        <div class="row">
            <div class="col s12">

                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" autocomplete="off"/>
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>
        </div>
        <div class="row">

            <div class="col s6">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col s6">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col s6">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" autocomplete="new-password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col s6">
                <label asp-for="PasswordConfirm" class="control-label"></label>
                <input asp-for="PasswordConfirm" class="form-control" autocomplete="new-password"/>
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col s9">
                <label asp-for="SelectedRole" class="control-label"></label>

                <select asp-for="SelectedRole" class="form-control" asp-items="@(new SelectList(Model.AvailableRoles))"></select>
            </div>
            <div class="col s3">
                <label>
                    <input asp-for="IsExempt" type="checkbox" />
                    <span>Is Exempt</span>
                </label>
                <span asp-validation-for="IsExempt" class="text-danger"></span>
            </div>

        </div>
        <div class="row">
            <div class="col s12">
                <label asp-for="SelectedJobs" class="control-label"></label> <em>*Optional</em>
                <select asp-for="SelectedJobs" class="form-control" asp-items="@(new SelectList(Model.AvailableJobs,"JobId","FullJobCodeWithName"))"></select>
            </div>
        </div>
        <div class="row">
            <div class="col s12">

                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-default">Back to List</a>

            </div>
        </div>
    </form>
</div>
@section Scripts {
   
}
