@model Orion.Web.UI.Models.SiteModel

<nav id="bread-crumb-bar" class="red darken-3 z-depth-3">
    <div class="nav-wrapper ">
        <div class="col s12">
            <a href="#!" class="breadcrumb">Home</a>
            <a href="#!" class="breadcrumb"> Site List</a>
            <a href="#!" class="breadcrumb"> Edit Site</a>
        </div>
    </div>
</nav>
<form asp-action="EditSite">
    <div class="row">
        <div class="container">
            <div class="row">
                <h4>Edit Site</h4>
            </div>
            <div class="row">
                <input type="hidden" asp-for="SiteID" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="SiteName" class="control-label"></label>
                <input asp-for="SiteName" class="form-control" />
                <span asp-validation-for="SiteName" class="text-danger"></span>
            </div>
            <div class="row">


                <input type="submit" value="Save" class="btn " />


            </div>
        </div>
    </div>

</form>