@model orion.web.Jobs.CreateJobViewModel

<nav id="bread-crumb-bar" class="red darken-3">
    <div class="nav-wrapper ">
        <div class="col s12">
            <a href="#!" class="breadcrumb">Home</a>
            <a asp-action="List">Job List</a>
            <a href="#!" class="breadcrumb"> Create New Job</a>
        </div>
    </div>
</nav>
<form asp-action="Create" method="post" class="orion-form">
    <style>
        div.col.s2.left-menu {
            background: #616161;
            padding-top: 64px;
            @*height: 100vh;
            position: relative;
            top: -30px;
            z-index: -1;*@
        }
       
        div.row.flex {
           
            display: flex;
            flex-wrap: wrap;
            margin-top: -12px;
            margin-bottom: 0px;
        }
        #main-panel {
            padding-top: 15px;
        }
        div.main-form .row {
            line-height: 1.5rem;
        }
        div.main-form .row.control-buttons {
            line-height: unset;
        }
        #main-panel .row input{

            height: 1rem
        }
    </style>
    <div class="row flex">


        <div class="col s2 left-menu">
            <div class="container">
                <div class="row">
                    <a class="btn btn-default" asp-action="Create" asp-controller="Site">Create Site</a>
                </div>
                <div class="row">
                    <a class="btn btn-default" asp-action="Create" asp-controller="Clients">Create Client</a>
                </div>
            </div>
        </div>

        <div id="main-panel" class="col s10 main-form">
            <div class="container">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Job.JobId" class="form-control" />
                <div class="row">
                    <label asp-for="Job.JobCode" class="control-label"></label>
                    <input asp-for="Job.JobCode" class="form-control" placeholder="XXXX XXXX" />
                    <span asp-validation-for="Job.JobCode" class="text-danger"></span>
                </div>
                <div class="row">
                    <label class="control-label">Client</label>

                    <select asp-for="SelectedClientId" class="form-control"
                            asp-items="@(new SelectList(Model.AvailableClients,"ClientId","ClientName"))"></select>
                </div>

                <div class="row">
                    <label class="control-label">Site</label>
                    <select asp-for="SelectedSiteId" class="form-control"
                            asp-items="@(new SelectList(Model.AvailableSites,"SiteID","SiteName"))"></select>
                </div>
                <div class="row">
                    <label class="control-label">Status</label>
                    <select id="SelectedJobStatusId" name="SelectedJobStatusId" data-val="true" data-val-required="The Status field is required." class="form-control">
                        <!option value="1" @(Model.SelectedJobStatusId == 1 ? "selected" : "")>Active</!option>
                        <!option value="2" @(Model.SelectedJobStatusId == 2 ? "selected" : "")>Closed</!option>
                    </select>
                </div>
                <div class="row">
                    <label class="control-label">Description</label>
                    <textarea asp-for="Job.JobName" class="form-control" placeholder="Brief Description"></textarea>
                    <span asp-validation-for="Job.JobName" class="text-danger"></span>
                </div>

                <div class="row">
                    <label class="control-label">Target Hours</label>
                    <input asp-for="Job.TargetHours" class="form-control" placeholder="XXX.X" />
                    <span asp-validation-for="Job.TargetHours" class="text-danger"></span>
                </div>
                <div class="row">
                    <label class="control-label">Project Manager</label>
                    <select asp-for="SelectedProjectManagerEmployeeId" class="form-control"
                            asp-items="@(new SelectList(Model.AvailableProjectManagers,"EmployeeId","EmployeeName"))"></select>
                </div>
                <div class="row controll-buttons">
                    <div class="col s12">
                        <a class="btn grey darken-2" asp-action="List">Back to List</a>
                        <button type="submit" value="Save" class="btn" >Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section scripts {
    <script type="text/javascript">document.addEventListener('DOMContentLoaded', function () {
            let short = document.querySelectorAll('div.col.left-menu');
            let tall = document.querySelectorAll('div.col.s10');
            matchColHeight(short[0], tall[0]);
        });</script>
}
