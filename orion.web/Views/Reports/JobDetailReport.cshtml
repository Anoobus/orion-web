@using orion.web.Reports
@model orion.web.Reports.ReportViewModel<JobDetailReport>



<form asp-action="JobDetailReport">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            @Html.HiddenFor(x => x.SelectedReport.ReportDisplayName)
            @Html.HiddenFor(x => x.SelectedReport.ReportSystemName)
            @Html.EditorFor(x => x.Report.PeriodSettings, "~/Views/Reports/PeriodBasedReportSettings.cshtml")            
            @Html.EditorFor(x => x.Report.JobBasedReportSettings, "~/Views/Reports/JobBasedReportSettings.cshtml")
            <div class="form-group">
                <label asp-for="ForDownload" class="control-label"></label>
                <input asp-for="ForDownload" type="checkbox" />
                <span asp-validation-for="ForDownload" class="text-danger"></span>
            </div>
        </div>
    </div>
    <input type="submit" value="Run" class="btn btn-default" />
</form>