@model orion.web.Expense.EditExpenseViewModel


<ol class="breadcrumb">
        <li class="breadcrumb-item "> <a href="@Url.Action("Index","TimeEntry")">Weekly Listing</a></li>
        <li class="breadcrumb-item "> Time Entry For Week Starting: @Model.Week.WeekStart.ToShortDateString()</li>
        <li class="breadcrumb-item active"> Edit Expense</li>
</ol>
<div class="row">
    <form asp-action="Edit" method="post" class="orion-form">
        <div class="col-md-4">
            <input type="hidden" asp-for="WeekId" class="form-control" />
            <input type="hidden" asp-for="CancelUrl" class="form-control" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AvailableJobs" class="control-label"></label>

                <select asp-for="SelectedJobId" class="form-control"
                        asp-items="@(new SelectList(Model.AvailableJobs,"JobId","FullJobCodeWithName"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="ExpenseToSave.AttachmentName" class="control-label"></label>
                <input asp-for="ExpenseToSave.AttachmentName" class="form-control" placeholder="Name" />
                <span asp-validation-for="ExpenseToSave.AttachmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpenseToSave.Classification" class="control-label"></label>
                <input asp-for="ExpenseToSave.Classification" class="form-control" placeholder="Expense Type" />
                <span asp-validation-for="ExpenseToSave.Classification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpenseToSave.Amount" class="control-label"></label>
                <input asp-for="ExpenseToSave.Amount" class="form-control" placeholder="XX.XX" />
                <span asp-validation-for="ExpenseToSave.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Description</label>
                <textarea asp-for="ExpenseToSave.AddtionalNotes" class="form-control" placeholder="Brief Description"></textarea>
                <span asp-validation-for="ExpenseToSave.AddtionalNotes" class="text-danger"></span>
            </div>

            <div class="form-group">
                @Html.HiddenFor(x => x.ExpenseItemId)
                @Html.HiddenFor(x => x.CancelUrl)
                @Html.HiddenFor(x => x.WeekId)
                @Html.HiddenFor(x => x.AttachmentId);
                <a class="btn btn-default" href="@Model.CancelUrl">Cancel</a> <input type="submit" name="postType" value="Save" class="btn btn-default" /> <input type="submit" name="postType" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </form>
</div>
