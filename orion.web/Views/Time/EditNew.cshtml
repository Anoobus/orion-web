@model orion.web.TimeEntries.FullTimeEntryViewModel

<div class="row">
    <div class="col-md-3">
        <a href="@Model.PreviousWeekUrl" class="btn btn-default"> <span class="glyphicon glyphicon-chevron-left"></span> Previous Week</a>
    </div>
    <div class="col-md-2">
        <span>
            <label asp-for="Week.WeekStart" class="control-label"></label> @Model.Week.WeekStart.ToShortDateString()
        </span>
    </div>
    <div class="col-md-2">
        <span>

            <label asp-for="Week.WeekEnd" class="control-label"></label> @Model.Week.WeekEnd.ToShortDateString()
        </span>

    </div>
    <div class="col-md-3">
        <a href="@Model.NextWeekUrl" class="btn btn-default"> Next Week <span class="glyphicon glyphicon-chevron-right"></span></a>
    </div>
</div>
<form asp-action="Save" method="post">

    <div class="row">
        <div class="col-md-12">
            <input type="hidden" asp-for="PageActionType" class="form-control" />
            <div asp-validation-summary="All" class="text-danger"></div>

            <table class="table table-condensed table-hover" id="time-entry">
                <tr>
                    <th>Effort</th>
                    <th>Monday</th>
                    <th style="display:none" day="ot-col-monday">OT-Monday</th>
                    <th>Tuesday</th>
                    <th style="display:none" day="ot-col-tuesday">OT-Tuesday</th>
                    <th>Wednesday</th>
                    <th style="display:none" day="ot-col-wednesday">OT-Wednesday</th>
                    <th>Thursday</th>
                    <th style="display:none" day="ot-col-thursday">OT-Thursday</th>
                    <th>Friday</th>
                    <th style="display:none" day="ot-col-friday">OT-Friday</th>
                    <th>Saturday</th>
                    <th style="display:none" day="ot-col-saturday">OT-Saturday</th>
                    <th>Sunday</th>
                    <th style="display:none" day="ot-col-sunday">OT-Sunday</th>
                    <th style="display:none" day="ot-col-total">OT-Total</th>
                    <th>All Total</th>
                </tr>
                @{
                    int i = 0;
                    foreach(var thing in Model.AddedEntries)
                    {
                        @Html.EditorFor(m => thing, "~/Views/Shared/AddedEntries.cshtml", "AddedEntries[" + i++ + "]")
                    }
                }
                <tfoot>
                    <tr>
                        <th>
                            <a href="#" data-toggle="modal" id="AddJob" data-target="#exampleModal"> <span class="glyphicon glyphicon-plus"></span> Add Job/Task</a>
                        </th>
                        <th day="col-monday"></th>
                        <th style="display:none" day="ot-col-monday"></th>
                        <th day="col-tuesday"></th>
                        <th style="display:none" day="ot-col-tuesday"></th>
                        <th day="col-wednesday"></th>
                        <th style="display:none" day="ot-col-wednesday"></th>
                        <th day="col-thursday"></th>
                        <th style="display:none" day="ot-col-thursday"></th>
                        <th day="col-friday"></th>
                        <th style="display:none" day="ot-col-friday"></th>
                        <th day="col-saturday"></th>
                        <th style="display:none" day="ot-col-saturday"></th>
                        <th day="col-sunday"></th>
                        <th style="display:none" day="ot-col-sunday"></th>
                        <th style="display:none" day="ot-col-total"></th>
                        <th day="col-total"></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
    <div>
      
        <div class="form-group">
            <a asp-action="Index" class="btn btn-default">Back to List</a>
            <input type="submit" value="Save" class="btn btn-default" />
           @*<a asp-action="SubmitForApproval"  class="btn btn-success" >Submit</a>
            <a class="btn btn-success" id="do-approval" href="#" data-toggle="modal" data-target="#submittedModel">Submit For Approval</a>*@
        </div>

    </div>


    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="exampleModalLabel">Add Job To Time Sheet</h4>
                </div>
                <div class="modal-body">
                    @if(Model.NewEntry.AvailableJobs.Any())
                    {
                    <div class="form-group">
                        
                        <select asp-for="NewEntry.SelectedJobId" class="form-control"
                                asp-items="@(new SelectList(Model.NewEntry.AvailableJobs, "JobId", "FullJobCodeWithName"))">
                            <option>Select Job</option>
                        </select>
                        <select asp-for="NewEntry.SelectedTaskCategory" class="form-control"
                                asp-items="@(new SelectList(Model.NewEntry.AvailableCategories) {  })" >
                            <option>Select Task</option>
                        </select>
                        <select asp-for="NewEntry.SelectedTaskId" class="form-control" 
                                asp-items="@(new SelectList(Model.NewEntry.AvailableTasks, "TaskId", "Name" ))">
                            <option>Select Task</option>
                        </select>
                    </div>
                    }

                    <blockquote>
                        <h4>Don't see your job? <a asp-controller="Jobs" asp-action="List"> <span class="glyphicon glyphicon-plus"></span> Add a Job</a> to your list.</h4>
                    </blockquote>

                </div>
                <div class="modal-footer">
                    <button id="add-task-ok" type="button" class="btn btn-default">Add</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    @*<div class="modal fade" id="submittedModel" tabindex="-1" role="dialog" aria-labelledby="submittedModelLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="submittedModelLabel">Submission Complete</h5>
                </div>
                <div class="modal-body">
                    <h4>You time for this week has been submitted for approval.</h4>
                </div>
                <div class="modal-footer">
                    <button type="button" id="submit-confirmed" class="btn btn-secondary" data-dismiss="modal">Ok</button>
                </div>
            </div>
        </div>
    </div>*@
</form>

@section scripts {
    <script type="text/javascript" src="~/js/TimeEntry/weekTableSumDefinition.js"></script>
    <script type="text/javascript" src="~/js/TimeEntry/weekTimeEntryTableSummation.js"></script>
    <script type="text/javascript" src="~/js/TimeEntry/weekTimeEntryOvertimeToggle.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $('#do-approval').click(function () {
                $("form :input").prop("disabled", true);
                $('#submit-confirmed').prop("disabled", false);
                $('#AddJob').hide();
                $('#do-approval').fadeOut();
            });

            $('#add-task-ok').click(function () {
                $('#PageActionType').val('Addtask');
                $('form').submit();
            });
        });



    </script>
}



