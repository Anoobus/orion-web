@model orion.web.Employees.EditEmployeeViewModel

@{
    ViewData["Title"] = "Edit Employee";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-action="List">List</a></li>
    <li class="breadcrumb-item active"> Edit @Model.Email</li>
</ol>
<form asp-action="EditEmployee">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" readonly="readonly" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirm" class="control-label"></label>
                <input asp-for="PasswordConfirm" class="form-control" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SelectedRole" class="control-label"></label>
                <select asp-for="SelectedRole" class="form-control" asp-items="@(new SelectList(Model.AvailableRoles))"></select>
            </div>
            <div class="form-group">
                <label asp-for="IsExempt" class="control-label"></label>
                <input asp-for="IsExempt" class="form-control" />
                <span asp-validation-for="IsExempt" class="text-danger"></span>
            </div>
        </div>
       
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-default">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

