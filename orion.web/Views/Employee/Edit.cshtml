@model orion.web.Employees.EditEmployeeViewModel



<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-action="List">List</a></li>
    <li class="breadcrumb-item active"> Edit @Model.Email</li>
</ol>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Details">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedRole" class="control-label"></label>

                <select asp-for="SelectedRole" class="form-control" asp-items="@(new SelectList(Model.AvailableRoles))"></select>
            </div>
            <div class="form-group">
                <label asp-for="SelectedJobs" class="control-label"></label>

                <select asp-for="SelectedJobs" class="form-control" asp-items="@(new SelectList(Model.AvailableJobs,"JobId","FullJobCodeWithName"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
